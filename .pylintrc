[MASTER]

disable=missing-docstring,locally-enabled,locally-disabled,duplicate-code,unnecessary-lambda

[BASIC]

good-names=i,j,k,Run,_,e,f,df
bad-names=foo,bar,baz,toto,tutu,tata

function-rgx=(test_)?[a-z_][a-z0-9_]{2,50}$
method-rgx=(test_)?[a-z_][a-z0-9_]{2,50}$

[FORMAT]

max-line-length=100
max-module-lines=1200

no-space-check=trailing-comma,dict-separator

indent-string='  '

indent-after-paren=2

[QUOTES]

string-quote=double
triple-quote=double
docstring-quote=double

[TYPECHECK]

generated-members=requests\..*,pandas.*,numpy.*,np.*,pd.*
ignored-classes=dict

[REPORTS]

output-format=colorized

[DESIGN]

max-branches=15
max-locals=20
